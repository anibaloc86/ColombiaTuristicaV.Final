<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anibalosorio.colombiaturisticavfinal.BarraFragment">

    <LinearLayout
        style="@style/linearLayoutStyle">
        <TextView
            style="@style/textViewStyle.Title"
            android:text="@string/barra"/>
        <ImageView
            style="@style/imageViewStyle"
            android:src="@drawable/parque"/>
        <TextView
            style="@style/textViewStyle.Content"
            android:text="@string/descripcionBarra"/>

       <com.google.android.gms.maps.MapView
           android:layout_width="200dp"
           android:layout_height="180dp"
           android:layout_gravity="center"
           android:id="@+id/mBarra">

       </com.google.android.gms.maps.MapView>


    </LinearLayout>

</FrameLayout>
